  <body>

      <header>
        <div class="container">
          <div class="header-title">
            <a href="/">
                <image class="header-logo scroll" src = "/debook.jpg">
            </a>
            <div class="header-menu-right">
               <a href="/" class="underline">home</a>
               <a class="underline" id="t_modal">transfer</a>
               <a class="underline" id="c_modal">classes</a>
               <a class="underline" id="s_modal">study</a>
               <a  class="underline" id="ch_modal">chat</a>
               <a class="underline" id="meet_modal">project</a>
            </div>
        　</div>
        </div>
      </header>

    <div class="click_disappear">

        <div id = "classes" class="class_section class-info">
          <div class="section-title">
            <h2>classes</h2>
          </div>
          <p>
            Share your thoughts!<br>Whose class should/shouldn't you take?
          </p>
          <div class="container-2">
            <a href="/class/art1A" class="subject yellow">Art 1A</a>
            <a href="/class/art1B" class="subject yellow">Art 1B</a>
            <a href="/class/art2A" class="subject yellow">Art 2A</a>
            <a href="/class/art2B" class="subject yellow">Art 2B</a>
            <a href="/class/photo7" class="subject yellow">Photo 7</a>
            <a href="/class/dance38A" class="subject yellow small">Dance 38A</a>
            <a href="/class/photo21" class="subject yellow small">Photo 21</a>
            <a href="/class/thea1" class="subject yellow small">Theater 1</a>
           </div>
         </div>


      <div class="posts-new">
        <div class="container">
          <h1 class="rate">search rate by professor name</h1>
          <%= form_tag("/class/search/arts") do %>
            <div class="form">
              <div class="form-body">
                <i class="fas fa-search"></i><input class = "search" name="name" placeholder="professor name">
                <p class="choose_class">select class</p>
                <select name="name_2">
                  <option selected hidden value = "none">Choose class</option>
                  <option value="art">Art</option>
                  <option value="dance">Dance</option>
                  <option value="photo">Photograghy</option>
                  <option value="thea">Theater</option>
                </select>
                <input class = "input_bottom" type="submit" value = "search !">
              </div>
           <% end %>
            </div>
         </div>
       </div>

    </div>

    <div class="social-section">
      <div class="section-title">
        Follow US!
      </div>
      <a href="https://twitter.com/deanzabook1" class="fab fa-twitter"></a>
      <a href="https://www.facebook.com/deanza.book.3" class="fab fa-facebook-f"></a>
      <a href="https://www.instagram.com/deanzabook/" class="fab fa-instagram"></a>
    </div>

    <footer>
       © 2018 Yaofeng Wu
    </footer>
    <script src="script.js"></script>
  </body>
