                <i class="fas fa-search"></i><input class = "search" name="name" placeholder="professor name">
                <p class="choose_class">select class</p>
                <select name="name_2">
                  <option selected hidden value = "none">Choose class</option>
                  <option value="japa">Japanese</option>
                  <option value="mand">Mandarin</option>
                  <option value="french">French</option>
                  <option value="ger">Germany</option>
                  <option value="kore">Korean</option>
                  <option value="ital">Italian</option>
                  <option value="russ">Russian</option>
                  <option value="spanish">Spanish</option>
                </select>
                <input class = "input_bottom" type="submit" value = "search !">
              </div>
           <% end %>
