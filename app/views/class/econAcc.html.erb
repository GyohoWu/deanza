  <body>

      <header>
        <div class="container">
          <div class="header-title">
            <a href="/">
                <image class="header-logo scroll" src = "/debook.jpg">
            </a>
            <div class="header-menu-right">
               <a href="/" class="underline">home</a>
               <a class="underline" id="t_modal">transfer</a>
               <a class="underline" id="c_modal">classes</a>
               <a class="underline" id="s_modal">study</a>
               <a  class="underline" id="ch_modal">chat</a>
               <a class="underline" id="meet_modal">project</a>
            </div>
        　</div>
        </div>
      </header>

    <div class="click_disappear">

        <div id = "classes" class="class_section class-info">
          <div class="section-title">
            <h2>classes</h2>
          </div>
          <p>
            Share your thoughts!<br>whose class should I take or shouldn't?
          </p>
          <div class="container-2">
            <a href="/class/econ1" class="subject yellow">Econ 1</a>
            <a href="/class/econ2" class="subject yellow">Econ 2</a >
            <a href="/class/econ3" class="subject yellow">Econ 3</a>
            <a href="/class/econ5" class="subject yellow">Econ 5</a>
            <a href="/class/acc1A" class="subject yellow small">Accounting 1A</a>
            <a href="/class/acc1B" class="subject yellow small">Accounting 1B</a>
            <a href="/class/acc1C" class="subject yellow small">Accounting 1C</a>
            <a href="/class/bus10" class="subject yellow small">Business 10</a>
           </div>

          </div>


      <div class="posts-new">
        <div class="container">
          <h1 class="rate">search rate by professor name</h1>
          <%= form_tag("/class/search/econAcc") do %>
            <div class="form">
              <div class="form-body">
                <i class="fas fa-search"></i><input class = "search" name="name" placeholder="professor name">
                <p class="choose_class">select class</p>
                <select name="name_2">
                  <option selected hidden value = "none">Choose class</option>
                  <option value="acc">Accounting</option>
                  <option value="econ">Economics</option>
                  <option value="bus">Business</option>
                </select>
                <input class = "input_bottom" type="submit" value = "search !">
              </div>
           <% end %>
            </div>
         </div>
       </div>

    </div>

    <div class="social-section">
      <div class="section-title">
        Follow US!
      </div>
      <a href="#" class="fab fa-twitter"></a>
      <a href="#" class="fab fa-facebook-f"></a>
      <a href="#" class="fab fa-instagram"></a>
    </div>

    <footer>
       © 2018 Yaofeng Wu
    </footer>
    <script src="script.js"></script>
  </body>
</html>
